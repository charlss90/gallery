    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Flickr Tests",
            "program": "${workspaceFolder}/flickr/node_modules/mocha/bin/_mocha",
            "preLaunchTask": "build-flickr",
            "cwd": "${workspaceFolder}/flickr",
            "args": [
                "-r",
                "module-alias/register",
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/flickr/lib/__tests__/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}